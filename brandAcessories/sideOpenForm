// js


<script>
    /* Popup JS */
    $('.sideOpen').on('click', function() {
        $('.rght-open').toggleClass('active');
        $('.black-layout').fadeToggle();
    });

    $('.phonePop').on('click', function() {
        $(this).toggleClass('active');
        $('.black-layout').fadeToggle();
    });

    $('.chatPop').on('click', function() {
        $(this).toggleClass('active');
        $('.black-layout').fadeToggle();
    });

    $('.black-layout,.closePop').on('click', function(e) {
        closePopup();
    })
</script>
